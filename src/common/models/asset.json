      "type": "string",
      "required": true
    },
    "serial": {
      "type": "string",
      "required": true
    },
    "batchNo": {
      "type": "string",
      "required": true
    },
    "createDate": {
      "type": "date"
    },
    "productionDate": {
      "type": "date",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "riskLevel": {
      "type": "number",
      "default": 1
    },
    "complienceStatus": {
      "type": "string"
    },
    "installedDate": {
      "type": "date"
    },
    "scheduledReplacementDate": {
      "type": "date"
    },
    "recertificationInterval": {
      "type": "number"
    },
    "lifeSpan": {
      "type": "number"
